<%= form_for(@period) do |f| %>
  <%= render partial: 'shared/errors', locals: {object: @period} %>

  <div class="form-group">
    <%= f.label :period_name %>
    <%= f.text_field :period_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.time_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.time_field :end_time, class: "form-control" %>
  <div class="form-group">
    <br/>
    <%= f.submit nil, class: "btn btn-large btn-primary" %>
  </div>
  <%= link_to '<i class="fa fa-arrow-circle-left"></i> Back'.html_safe, events_path %>
<% end %>