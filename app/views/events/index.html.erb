<% provide(:title, 'Events') %>
<div class='row'>
  <div class='col-md-8'>
    <h1>Events:</h1>

    <table class='table'>
      <thead>
        <tr>
          <th>Invitee</th>
          <th>Event Type</th>
          <th>Event Date</th>
          <th>Period</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <th><%= event.users.first.full_name %></th>
            <td><%= event.event_type.capitalize %></td>
            <td><%= event.event_date.strftime('%d/%m/%Y') %></td>
            <td><%= event.period.period_name %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Event', new_event_path %>
  </div>
</div>
