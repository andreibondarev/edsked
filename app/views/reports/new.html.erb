<% provide(:title, 'New Report') %>
<% content_for(:heading, "<i class='fa fa-file-text'></i> Generate Report".html_safe) %>

<div class='row'>    
  <div class='col-md-5'>
    <%= form_for @report, url: reports_path, html: {class: ''} do |f| %>
      <%= render partial: 'shared/errors', locals: {object: @report} %>
      <div class="form-group">
        <%= f.label 'Teacher' %>
        <%= f.select :user_id, options_for_select(User.all.map{|p| [p.full_name, p.id]}, f.object.user_id), {include_blank: '(Select a teacher)'}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.text_field :start_date, value: @report.start_date, class: "form-control datepicker" %>
      </div>
      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.text_field :end_date, value: @report.end_date, class: "form-control datepicker" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Generate', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>