<div class='border-form-div'>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class='form-group'>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :role %><br />
      <%= f.select :role, options_for_select(User.roles.keys, User.roles.values), {}, {class: 'form-control'} %>
    </div>

    <div class='form-group'>
      <%= f.label :organization_id %> (WIP -- for now just put an integer)<br />
      <%= f.text_field :organization_id, default: 0, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>